{
  "name": "${envName}",
  "description": "mattermost",
  "version": "1.0.1",
  "author": "Sydyk",
  "containers": [
    {
      "hostname": "mysql",
      "template": "mysql@280dcda67a67d071970ff838d0331c33c0c04710",
      "peer-criteria": "HTTP-GROUP",
      "size": "${mysqlDBtype}"
    },
    {
      "hostname": "mattermost",
      "template": "mattermost@280dcda67a67d071970ff838d0331c33c0c04710",
      "peer-criteria": "HTTP-GROUP",
      "size": "${mattermostContainerType}",
      "port-mapping": [
        {
          "protocol": "HTTPS",
          "domain": "${domain}",
          "internal-port": "80",
          "external-port": "443"
        }
      ]
    }
  ],
  "peer-criteria": [
    {
      "name": "HTTP-GROUP",
      "max-price": "${maxPeersPrice}"
    }
  ],
  "ansible-configuration": {
    "source-url": "https://github.com/platium1/simple-bleprint/archive/master.zip",
    "ansible-playbook": "main.yml",
    "arguments": [
      {
        "key": "key1",
        "value": "value1"
      }
    ],
    "groups": [
      {
        "name": "db",
        "hostnames": [
          "mysql"
        ]
      },
      {
        "name": "mattermost",
        "hostnames": [
          "mattermost"
        ]
      }
    ]
  },
  "user-variables": {
    "domain": {
      "description": "Select your domain or create new one",
      "type": "domain",
      "default": "mattermost.envs.subutai.cloud",
      "validation": "[a-zA-Z0-9.-]+"
    },
    "mysqlDBtype": {
      "description": "You can set LARGE,HUGE",
      "type": "enum",
      "default": "SMALL",
      "validation": "LARGE,HUGE"
    },
    "mattermostContainerType": {
      "description": "You can set LARGE,HUGE",
      "type": "enum",
      "default": "SMALL",
      "validation": "LARGE,HUGE"
    },
    "maxPeersPrice": {
      "description": "Enter max price of peer you are looking for",
      "type": "int",
      "default": "8080",
      "validation": "\\d+"
    },
    "envName": {
      "description": "Enter your environment name",
      "type": "string",
      "default": "mattermost env",
      "validation": "[a-zA-Z0-9]+"
    }
  }
}
